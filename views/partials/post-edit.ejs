<%- include("header.ejs") %>
        <h2>Edit Post</h2>    
        <div class="post-form">
            <form action="/update" method="POST">
                <input type="hidden" name="id" value="<%= post.id %>">
                <div class="personal-info">
                    <div class="info">
                        <label for="fName">First Name:</label>
                        <input type="text" name="fName" value="<%= post.firstName %>" required />
                    </div>
                    <div class="info">
                        <label for="lName">Last Name:</label>
                        <input type="text" name="lName" value="<%= post.lastName %>" required />
                    </div>
                    <div class="info">
                        <label for="username">Username:</label>
                        <input type="text" name="username" value="<%= post.userName %>" required />
                    </div>
                </div>
                <div class="info">
                    <label for="message">Message:</label>
                    <textarea name="message" rows="4" cols="50" required ><%= post.msg %></textarea>
                </div>
                <div class="info submit-btn">
                    <button type="submit">Update</button>
                </div>
            </form>
        </div>
<%- include("footer.ejs") %>